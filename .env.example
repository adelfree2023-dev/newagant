# ====================================
# CoreFlex Environment Configuration
# ====================================
# نسخ هذا الملف إلى .env وتعديل القيم

# ====================================
# Server Configuration
# ====================================
NODE_ENV=production
PORT=8000
SERVER_IP=35.226.47.16

# ====================================
# Database Configuration
# ====================================
DATABASE_URL=postgresql://coreflex:${DB_PASSWORD}@postgres:5432/coreflex
DB_PASSWORD=change_this_in_production_to_a_strong_password
DB_HOST=postgres
DB_PORT=5432
DB_NAME=coreflex
DB_USER=coreflex
DB_MAX_CONNECTIONS=20
DB_IDLE_TIMEOUT=10000

# ====================================
# Redis Configuration
# ====================================
REDIS_URL=redis://redis:6379
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# ====================================
# JWT & Security
# ====================================
# Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=change_this_to_a_very_long_random_string_at_least_64_characters
JWT_EXPIRES_IN=15m
REFRESH_TOKEN_EXPIRES_IN=7d

# ====================================
# Session Configuration
# ====================================
SESSION_SECRET=another_long_random_string_for_sessions
SESSION_ADMIN_TIMEOUT=1800000
SESSION_SUPERADMIN_TIMEOUT=900000

# ====================================
# CORS Configuration
# ====================================
CORS_ORIGIN=http://35.226.47.16:3000,http://35.226.47.16:3001,http://35.226.47.16:3002,http://35.226.47.16:3003
CORS_CREDENTIALS=true

# ====================================
# Rate Limiting
# ====================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_MAX=10

# ====================================
# HashiCorp Vault (Optional)
# ====================================
VAULT_ENABLED=false
VAULT_ADDR=http://vault:8200
VAULT_TOKEN=your_vault_token
VAULT_PATH=secret/coreflex

# ====================================
# Cloudflare Tunnel (Optional)
# ====================================
CF_TUNNEL_ENABLED=false
CF_TUNNEL_TOKEN=your_cloudflare_tunnel_token

# ====================================
# 2FA Configuration
# ====================================
TOTP_ISSUER=CoreFlex
TOTP_ALGORITHM=sha1
TOTP_DIGITS=6
TOTP_STEP=30

# ====================================
# Email Configuration (SMTP)
# ====================================
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@example.com
SMTP_PASS=your_email_password
EMAIL_FROM=noreply@coreflex.io

# ====================================
# WhatsApp Business API
# ====================================
WHATSAPP_ENABLED=false
WHATSAPP_API_URL=https://graph.facebook.com/v17.0
WHATSAPP_PHONE_ID=your_phone_id
WHATSAPP_ACCESS_TOKEN=your_access_token

# ====================================
# Shipping Providers
# ====================================
# Bosta
BOSTA_API_KEY=your_bosta_api_key
BOSTA_API_URL=https://app.bosta.co/api/v2

# Aramex
ARAMEX_USERNAME=your_aramex_username
ARAMEX_PASSWORD=your_aramex_password
ARAMEX_ACCOUNT_NUMBER=your_account_number

# ====================================
# Payment Gateways
# ====================================
# Stripe
STRIPE_SECRET_KEY=sk_test_your_stripe_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# PayPal
PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_CLIENT_SECRET=your_paypal_client_secret
PAYPAL_MODE=sandbox

# ====================================
# Analytics & Tracking
# ====================================
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
FACEBOOK_PIXEL_ID=your_pixel_id
TIKTOK_PIXEL_ID=your_tiktok_pixel_id

# ====================================
# Storage (S3/GCS)
# ====================================
STORAGE_PROVIDER=local
AWS_ACCESS_KEY_ID=your_aws_key
AWS_SECRET_ACCESS_KEY=your_aws_secret
AWS_BUCKET_NAME=coreflex-storage
AWS_REGION=us-east-1

# ====================================
# Logging
# ====================================
LOG_LEVEL=info
LOG_FORMAT=json
AUDIT_LOG_ENABLED=true

# ====================================
# Backup Configuration
# ====================================
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 3 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=coreflex-backups

# ====================================
# Frontend URLs
# ====================================
NEXT_PUBLIC_API_URL=http://35.226.47.16:8000
NEXT_PUBLIC_STOREFRONT_URL=http://35.226.47.16:3001
NEXT_PUBLIC_ADMIN_URL=http://35.226.47.16:3002
